{% extends 'layouts/base.njk' %}

{% block content %}
{% if pages.sdgs.resourcePage.toggle == true %}
<title>{{ pages.sdgs.resourcePage.header }}</title>

<main id="main-content" tabindex="-1">
<div class="resource-landing-container">
  <section class="intro-banner" {% if bgText %} style="color:{{ bgText }}"{% endif %}>
    {% if information.networkDetails %}
        {% set introHeader =  pages.sdgs.resourcePage.header %}
        {% set introSubtitle = pages.sdgs.resourcePage.subtitle | safe %}
            {% include "layouts/intro-banner.njk" %}
    {% endif %}
  </section>
  <section class="full-bleed resources-bg">
    <div class="content-container">
    {% include "partials/components/pagination.njk" %}
    {% include "partials/components/resources-list.njk" %}
    </div>
</section>

</div>
</main>
{% endif %}
{% endblock %}
