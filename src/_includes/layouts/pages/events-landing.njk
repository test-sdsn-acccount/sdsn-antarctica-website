{% extends 'layouts/base.njk' %}

{% block content %}
{% if pages.involved.eventsPage.toggle == true %}
<title>{{ pages.involved.eventsPage.header }}</title>
<main id="main-content" tabindex="-1">
  <div class="resource-landing-container">
    <section class="intro-banner" {% if bgText %} style="color:{{ bgText }}"{% endif %}>
      {% if information.networkDetails %}
          {% set introHeader =  pages.involved.eventsPage.header %}
          {% set introSubtitle = pages.involved.eventsPage.subtitle | safe %}
              {% include "layouts/intro-banner.njk" %}
      {% endif %}
    </section>
    <section class="full-bleed resources-bg">
      <div class="content-container ">
      {% include "partials/components/pagination.njk" %}
      {% include "partials/components/events-list.njk" %}
      </div>
    </section>

  </div>
</main>
{% endif %}
{% endblock %}
